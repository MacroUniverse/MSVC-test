{
  "version": 2,
  "configurePresets": [
    {
      "name": "vcpkg",
      "generator": "Visual Studio 16 2019",
      "binaryDir": "${sourceDir}/build-msvc",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CONFIGURATION_TYPES": "Release;BtDebug",
        "CMAKE_MAP_IMPORTED_CONFIG_BTDEBUG": "RELEASE",
        "CMAKE_C_FLAGS_BTDEBUG": "/MD /Zi /Od /Ob0 /RTC1",
        "CMAKE_CXX_FLAGS_BTDEBUG": "/MD /Zi /Od /Ob0 /RTC1",
        "CMAKE_EXE_LINKER_FLAGS_BTDEBUG": "/debug /INCREMENTAL",
        "CMAKE_SHARED_LINKER_FLAGS_BTDEBUG": "/debug /INCREMENTAL",
        "CMAKE_MODULE_LINKER_FLAGS_BTDEBUG": "/debug /INCREMENTAL"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Debug",
      "configurePreset": "vcpkg",
      "configuration": "BtDebug"
    },
    {
      "name": "Release",
      "configurePreset": "vcpkg",
      "configuration": "Release"
    }
  ]
}
